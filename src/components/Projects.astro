      { image: previate_web_1_mobile, alt: "Sección 2" },
      { image: previate_web_2_mobile, alt: "Sección 3" },
    ],
  },

  {
    id: "imdb-clone",
    title: "IMDb Clone",
    description:
      "Página con información sobre películas inspirada en la conocida página 'IMDb'.",
    body: "IMDb Clone es una página simple que obtiene datos desde una API con información sobre series, películas, documentales, entre otros contenidos audiovisuales, y los muestra al usuario en una interfaz limpia y amigable.\nEstá inspirada en la conocida página 'IMDb' (Internet Movie Database), y la utilicé principalmente para aprender los conceptos de Next.js (server-side rendering, fetching, etc.) y Tailwind CSS, ya que este fue mi primer proyecto con ambas tecnologías.",
    category: "Página Web",
    technologies: [
      TECHNOLOGIES.next,
      TECHNOLOGIES.react,
      TECHNOLOGIES.javascript,
      TECHNOLOGIES.tailwind,
    ],
    //
    web: "https://imdb-clone-i8k08k7im-a-scu.vercel.app/",
    github: "https://github.com/a-scu/IMDb-Clone",
    //
    imagesDesktop: [{ image: imdb_clone_home_desktop, alt: "Inicio" }],
    imagesMobile: [{ image: imdb_clone_home_mobile, alt: "Inicio" }],
  },
];
---

<section
  id="projects"
  class="flex flex-col justify-center w-full gap-8 pt-8 pb-4 sm:pb-8 sm:pt-24"
>
  <h2 class="px-4 text-3xl font-extrabold">Proyectos</h2>

  <div class="flex flex-col gap-8">
    {
      PROJECTS.map((el, i) => (
        <>
          <ProjectItem data={el} />
        </>
      ))
    }
  </div>
</section>
