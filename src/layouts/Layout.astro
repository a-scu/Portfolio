---
import "@fontsource-variable/onest";

import Header from "../components/Header";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="author" content="Scu" />
    <meta property="og:image" content="/portfolio-screenshot.webp" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Desarrollador web y móvil especializado en tecnologías como React.js, Next.js, Astro, JavaScript, HTML, CSS, Tailwind CSS, React Native y Expo. Explora mi portafolio para ver mis proyectos y habilidades."
    />
    <meta
      name="keywords"
      content="Desarrollador Web, Desarrollador Móvil, React, React.js, React Native, Next js, Next.js, JavaScript, HTML, CSS, Git, GitHub, Firebase, Tailwind CSS, Expo"
    />
    <meta />
    <title>{title}</title>
  </head>
  <body class="relative">
    <Header client:load />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
    background: #0f90b4;
    background: -webkit-linear-gradient(to right, #0072ff, #0f90b4);
    background: linear-gradient(to right, #0072ff, #0f90b4);
  }

  body {
    color: #fff;
    min-height: 100vh;
  }

  /* Width */
  ::-webkit-scrollbar {
    width: 8px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #888;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #fff;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #e0e0e0;
  }

  header {
    background: #0f90b4;
    background: -webkit-linear-gradient(to right, #0072ff, #0f90b4);
    background: linear-gradient(to right, #0072ff, #0f90b4);
  }

  @media screen and (max-width: 640px) {
    nav {
      background: #0f90b4;
      background: -webkit-linear-gradient(to right, #0072ff, #0f90b4);
      background: linear-gradient(to right, #0072ff, #0f90b4);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
